@model IEnumerable<ASPMVC.Models.SupportChatModel>

@{
    ViewBag.Title = "Pomoc techniczna";
}

<h2>Pomoc techniczna</h2>

<p>
    @Html.ActionLink("Rozpocznij nowy czat", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Administrator
        </th>
        <th>
            Użytkownik
        </th>
        <th>
            Rozmowa
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Admin.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.User.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Conversation)
        </td>
        <td>
            @Html.ActionLink("Kontynuuj rozmowę", "Edit", new { id=item.Id }) 
        </td>
    </tr>
}

</table>
