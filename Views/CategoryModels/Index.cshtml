@model IEnumerable<ASPMVC.Models.CategoryModel>

@{
    ViewBag.Title = "Kategorie";
}

<h2>Kategorie</h2>

<p>
    @Html.ActionLink("Stwórz nową kategorię", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Nadrzędna kategoria
        </th>
        <th>
            Nazwa kategorii
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ParentCategory.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Edytuj", "Edit", new { id=item.Id }) 
            @Html.ActionLink("Usuń", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
