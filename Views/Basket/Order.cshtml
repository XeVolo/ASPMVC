@model ASPMVC.Models.OrderViewModel
@{
    ViewBag.Title = "Order";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        Metoda płatności
        <div class="col-md-10">
            @Html.DropDownList("PaymentId", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.DeliveryId, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        Metoda dostawy
        <div class="col-md-10">
            @Html.DropDownList("DeliveryId", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.PaymentId, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Potwierdź" class="btn btn-default" />
        </div>
    </div>
}


    @Html.ActionLink("Powrót", "Index", "Home")