@model IEnumerable<ASPMVC.Models.ProductModel>

@{
    ViewBag.Title = "Koszyk";
}

<h2>Koszyk</h2>
<table class="table">
    <tr>
        <th>
            Nazwa
        </th>
        <th>
            Cena
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
            </td>
        </tr>
    }

</table>
@using (Html.BeginForm())
{
    <div class="row">
        <div class="col-lg-4"><input type="submit" value="Wyczyść koszyk" class="btn btn-light" /></div>
        <div class="col-lg-8"></div>
    </div>
}
@Html.ActionLink("Zamów", "Order")

