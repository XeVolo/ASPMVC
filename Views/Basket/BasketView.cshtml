@model IEnumerable<SystemyBazDanychP1.Models.ProductModel>

@{
    ViewBag.Title = "Koszyk";
}

<h2>Koszyk</h2>
<table class="table">
    <tr>
        <th>
            Nazwa
        </th>
        <th>
            Cena
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
            </td>
        </tr>
    }

</table>
@Html.ActionLink("Zamów", "Order")

