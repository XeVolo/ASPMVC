@model IEnumerable<ASPMVC.Models.SaleAnnouncementModel>

@{
    ViewBag.Title = "Ogłoszenia";
}
@Html.ActionLink("Nowości i promocje", "NewsPromotions", new { area = "" }, new { @class = "nav-link" })

<h2>Ogłoszenia</h2>
<table class="table">
    <tr>
        <th>
            Zdjęcie
        </th>
        <th>
            Nazwa ogłoszenia
        </th>
        <th>
            Cena [zł]
        </th>
        <th>
            Status
        </th>
        <th>
            Data wystawienia
        </th>


        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @foreach (var item2 in item.FilePaths)
                {
                if (!string.IsNullOrEmpty(item2.Path))
                {
                    <img src="@item2.Path" alt="Zdjęcie ogłoszenia" />
                }
                else
                {
                    <span>Brak zdjęcia</span>
                }
                    break;
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.State)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>

            <td>
                @Html.ActionLink("Pokaż ogłoszenie", "Details", new { id = item.Id })
            </td>
        </tr>
    }

</table>
