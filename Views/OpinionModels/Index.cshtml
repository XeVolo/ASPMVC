@model IEnumerable<SystemyBazDanychP1.Models.OpinionModel>

@{
    ViewBag.Title = "Opinie";
}

<h2>Zarządzanie opiniami</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.SaleAnnouncement.Id)
        </th>
        <th>
            Ogłoszenie  
        </th>
        <th>
            Użytkownik
        </th>
        <th>
            Opis
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.SaleAnnouncement.Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SaleAnnouncement.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.User.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>           
            @Html.ActionLink("Usuń", "Delete", new { id = item.Id })
        </td>
    </tr>
}

</table>
